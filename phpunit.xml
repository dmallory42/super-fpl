<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         cacheDirectory=".phpunit.cache">
    <testsuites>
        <testsuite name="FPL Client">
            <directory>packages/fpl-client/tests</directory>
        </testsuite>
        <testsuite name="API">
            <directory>api/tests</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>packages/fpl-client/src</directory>
            <directory>api/src</directory>
        </include>
    </source>
</phpunit>
